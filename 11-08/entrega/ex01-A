    <form action="ex01-A.php" method="get">
      <label for="celcius">Temperatura em Celsius</label>
      <input type="text" name="celcius">
      <input type="submit" value="Calcular">
    </form>
    <h2> <?= $celcius ?? " " ?> em Celsius Ã© igual a <?= $fah ?? " "; ?>em Fahrenheit </h2>
